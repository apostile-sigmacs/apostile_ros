            </material>

            
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.06" length="0.025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.6"/>
            <inertia ixx="5.7125e-4" ixy="0.0" ixz="0.0" iyy="5.7125e-4" iyz="0.0" izz="1.08e-3"/>
        </inertial>

    </link>
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="Robot_base"/>
