<?xml version="1.0"?>
<robot name="apostile_robot">



    <!--base_link-->
    <link name="Robot_base">

        <visual>
            
        
            <geometry>
                <box size="0.366 0.2934 0.136"/>
            </geometry>
            <material name = "white">

                <color rgba="10 10 10 0.1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.366 0.2934 0.136"/>
            </geometry>
            
        </collision>

        <inertial>
            <mass value="5.6"/>
            <inertia ixx="0.0711" ixy="0.0" ixz="0.0" iyy="0.1025" iyz="0.0" izz="0.0486"/>
        </inertial>
        
    </link>


    

    

    
    




    <!--front_left_wheel-->
    
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.025"/>
            </geometry>
            <material name="red">
                <color rgba="1 0.0 0.0 1"/>
            </material>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.06" length="0.025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.6"/>
            <inertia ixx="5.7125e-4" ixy="0.0" ixz="0.0" iyy="5.7125e-4" iyz="0.0" izz="1.08e-3"/>
        </inertial>
       
    </link>
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="Robot_base"/>
        <child link="front_left_wheel"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0.10509 0.11577 -0.03856" rpy="-1.5707 0 0"/>
    </joint>









