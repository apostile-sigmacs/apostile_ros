<?xml version= "1.0" ?>
<robot name = "apostile_robot">






    <link name = "base_link">
        <visual>
            <geometry>
               <box size="0.366 0.2934 0.136"/>
            </geometry>
            <material name = "white">
                <color rgba="1 1 1 1"/> 
            </material>
    
        </visual>
        <collision>
            <geometry>
               <box size="0.366 0.2934 0.136"/>
            </geometry>
            
        </collision>
        <inertial>
            <mass value="5.6"/>
            <inertia ixx="0.0711" ixy="0.0" ixz="0.0" iyy="0.06762" iyz="0.0" izz="0.01422"/>
        </inertial>
    </link>  









    <link name = "back_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.025"/>            
            </geometry>
            <material name = "black">
                <color rgba= "0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
               <cylinder radius="0.06" length="0.025"/>
            </geometry>
            
        </collision>
        <inertial>
            <mass value="0.6"/>
            <inertia ixx="5.7125e-4" ixy="0.0" ixz="0.0" iyy="5.7125e-4" iyz="0.0" izz="1.08e-3"/>
        </inertial>
    </link>
    <joint name = "back_right_wheel_joint" type ="continuous">
        <axis xyz = "0.0 0.0 1"/>
        <parent link= "base_link"/>
        <child link = "back_right_wheel"/>
        <origin xyz = "-0.10509 -0.11577 -0.05" rpy= "-1.5708 0.0 0.0"/>
    </joint>











    <link name = "back_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.060" length="0.025"/>            
            </geometry>
            <material name = "black">
                <color rgba= "0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
               <cylinder radius="0.06" length="0.025"/>
            </geometry>
            
        </collision>
        <inertial>
            <mass value="0.6"/>
            <inertia ixx="5.7125e-4" ixy="0.0" ixz="0.0" iyy="5.7125e-4" iyz="0.0" izz="1.08e-3"/>
        </inertial>
        
    </link>
    <joint name = "back_left_wheel_joint" type ="continuous">
        <axis xyz = "0.0 0.0 1"/>
        <parent link= "base_link"/>
        <child link = "back_left_wheel"/>
        <origin xyz = "-0.10509 0.11577 -0.05" rpy= "-1.5708 0.0 0.0"/>
    </joint>












    <link name = "front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.025"/>            
            </geometry>
            <material name = "black">
                <color rgba= "0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
               <cylinder radius="0.06" length="0.025"/>
            </geometry>
            
        </collision>
        <inertial>
            <mass value="0.6"/>
            <inertia ixx="5.7125e-4" ixy="0.0" ixz="0.0" iyy="5.7125e-4" iyz="0.0" izz="1.08e-3"/>
        </inertial>
    </link>
    <joint name = "front_right_wheel_joint" type ="continuous">
        <axis xyz = "0.0 0.0 1"/>
        <parent link= "base_link"/>
        <child link = "front_right_wheel"/>
        <origin xyz = "0.10509 -0.11577 -0.05" rpy= "-1.5708 0.0 0.0"/>
    </joint>









    <link name = "front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.060" length="0.025"/>            
            </geometry>
            <material name = "black">
                <color rgba= "0.0 0.0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <geometry>
               <cylinder radius="0.06" length="0.025"/>
            </geometry>
            
        </collision>
        <inertial>
            <mass value="0.6"/>
            <inertia ixx="5.7125e-4" ixy="0.0" ixz="0.0" iyy="5.7125e-4" iyz="0.0" izz="1.08e-3"/>
        </inertial>
    </link>
    <joint name = "front_left_wheel_joint" type ="continuous">
        <axis xyz = "0.0 0.0 1"/>
        <parent link= "base_link"/>
        <child link = "front_left_wheel"/>
        <origin xyz = "0.10509 0.11577 -0.05" rpy= "-1.5708 0.0 0.0"/>
    </joint>








    <link name = "rp_link">
        <visual>
            <geometry>
               <cylinder radius="0.035" length="0.055"/> 
            </geometry>
            <material name = "white">
                <color rgba="1 1 1 1"/> 
            </material>
    
        </visual>
        <collision>
            <geometry>
               <cylinder radius="0.035" length="0.055"/>
            </geometry>
            
        </collision>
        
    </link>
    <joint name = "rp_joint" type ="fixed">
        <axis xyz = "0.0 0.0 0.0"/>
        <parent link= "base_link"/>
        <child link = "rp_link"/>
        <origin xyz = "0 0 0.0955" rpy= "0.0 0.0 0.0"/>
    </joint>




    <gazebo>
        <plugin name="skid_steer_drive_controller" filename="libgazebo_ros_skid_steer_drive.so">
            <updateRate>100.0</updateRate>
            <robotNamespace>/</robotNamespace>
            <leftFrontJoint>front_left_wheel_joint</leftFrontJoint>
            <rightFrontJoint>front_right_wheel_joint</rightFrontJoint>
            <leftRearJoint>back_left_wheel_joint</leftRearJoint>
            <rightRearJoint>back_right_wheel_joint</rightRearJoint>
            <wheelSeparation>0.231</wheelSeparation>
            <wheelDiameter>0.120</wheelDiameter>
            <robotBaseFrame>base_link</robotBaseFrame>
            <torque>40</torque>
            <topicName>cmd_vel</topicName>
            <broadcastTF>true</broadcastTF>
        </plugin>
    </gazebo>









    <gazebo reference="rp_link">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>40</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.10</min>
                    <max>8.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                        <mean>0.0</mean>
                        <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>scan</topicName>
                <frameName>rp_link</frameName>
            </plugin>
        </sensor>
    </gazebo>
</robot>




       

